            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Surname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BorrowLimit)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WaitLimit)
        </td>
        <td>
